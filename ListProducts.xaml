<Page x:Class="EcomDesktop.ListProducts"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EcomDesktop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListProducts"
      Loaded="Page_Loaded">
    <Grid>
        <DockPanel>
            <StackPanel Orientation="Horizontal" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,0,50" DockPanel.Dock="Top">
                <Button Content="Add a Product" DockPanel.Dock="Top" Click="AddProduct_Navigate" Panel.ZIndex="5" />
        </StackPanel>
            <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalAlignment="Center" Width="800" DockPanel.Dock="Bottom">
            <UniformGrid x:Name="uniformGrid" />
        </ScrollViewer>
        </DockPanel>

    </Grid>

</Page>
